<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dip">

    <TextView
        android:id="@+id/summary_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_straighten_white_24dp"
        android:drawableStart="@drawable/ic_straighten_white_24dp"
        android:drawablePadding="10dp"
        android:text=""
        android:textSize="@dimen/label_font_size" />

    <TextView
        android:id="@+id/summary_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_schedule_white_24dp"
        android:drawableStart="@drawable/ic_schedule_white_24dp"
        android:drawablePadding="10dp"
        android:text=""
        android:textSize="@dimen/label_font_size" />

    <TextView
        android:id="@+id/summary_positions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_linear_scale_white_24dp"
        android:drawableStart="@drawable/ic_linear_scale_white_24dp"
        android:drawablePadding="10dp"
        android:text=""
        android:textSize="@dimen/label_font_size" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="40dip">

        <Button
            android:id="@+id/summary_button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok" />
    </TableRow>

</LinearLayout>