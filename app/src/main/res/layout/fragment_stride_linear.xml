<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="7"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout android:id="@+id/graph_details"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="2"
                  android:orientation="vertical">
        <RelativeLayout android:id="@+id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1.0"
                        android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:orientation="horizontal">
            <TextView android:id="@+id/textView6"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentTop="true"
                      android:layout_marginLeft="20dp"
                      android:layout_marginTop="40dp"
                      android:text="Stopwatch"
                      android:textColor="#ffffff"
                      android:textSize="20dp"/>
            <TextView android:id="@+id/textView2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignLeft="@+id/textView6"
                      android:layout_below="@+id/textView6"
                      android:layout_marginTop="30dp"
                      android:text="Step Count"
                      android:textColor="#ffffff"
                      android:textSize="20dp"/>
            <TextView android:id="@+id/textView3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignLeft="@+id/textView2"
                      android:layout_below="@+id/textView2"
                      android:layout_marginTop="30dp"
                      android:text="Distance"
                      android:textColor="#ffffff"
                      android:textSize="20dp"/>
            <TextView android:id="@+id/textView4"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignLeft="@+id/textView3"
                      android:layout_below="@+id/textView3"
                      android:layout_marginTop="30dp"
                      android:text="Avg Speed"
                      android:textColor="#ffffff"
                      android:textSize="20dp"/>
            <TextView android:id="@+id/textView5"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignLeft="@+id/textView4"
                      android:layout_below="@+id/textView4"
                      android:layout_marginTop="40dp"
                      android:text="Coordinates"
                      android:textColor="#ffffff"
                      android:textSize="20dp"/>
            <TextView android:id="@+id/timer"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_above="@+id/textView2"
                      android:layout_marginLeft="60dp"
                      android:layout_toRightOf="@+id/textView6"
                      android:text="0:00:00"
                      android:textSize="18dp"/>
            <TextView android:id="@+id/stepcount"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignBottom="@+id/textView2"
                      android:layout_alignLeft="@+id/timer"
                      android:text="000"
                      android:textSize="18dp"/>
            <TextView android:id="@+id/dis"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignBottom="@+id/textView3"
                      android:layout_alignLeft="@+id/stepcount"
                      android:text="000.0"
                      android:textSize="18dp"/>
            <TextView android:id="@+id/avgspeed"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignBottom="@+id/textView4"
                      android:layout_alignLeft="@+id/dis"
                      android:text="0.0"
                      android:textSize="18dp"/>
            <TextView android:id="@+id/textView11"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignBottom="@+id/timer"
                      android:layout_marginLeft="3dp"
                      android:layout_toRightOf="@+id/timer"
                      android:text="hh:mm:ss"
                      android:textColor="#ffffff"
                      android:textSize="13dp"
                      android:textStyle="italic"/>
            <TextView android:id="@+id/textView13"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignBottom="@+id/dis"
                      android:layout_marginLeft="3dp"
                      android:layout_toRightOf="@+id/dis"
                      android:text="m"
                      android:textColor="#ffffff"
                      android:textSize="13dp"
                      android:textStyle="italic"/>
            <TextView android:id="@+id/textView14"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignBottom="@+id/avgspeed"
                      android:layout_marginLeft="3dp"
                      android:layout_toRightOf="@+id/avgspeed"
                      android:text="kmph"
                      android:textColor="#ffffff"
                      android:textSize="13dp"
                      android:textStyle="italic"/>
            <TextView android:id="@+id/textView12"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:layout_below="@+id/textView5"
                      android:layout_marginLeft="50dp"
                      android:layout_marginTop="20dp"
                      android:text="X"
                      android:textColor="#ffffff"/>
            <TextView android:id="@+id/X"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignLeft="@+id/avgspeed"
                      android:layout_alignTop="@+id/textView12"
                      android:text="000.0"
                      android:textSize="18dp"/>
            <TextView android:id="@+id/textView15"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignLeft="@+id/textView12"
                      android:layout_below="@+id/textView12"
                      android:layout_marginTop="20dp"
                      android:text="Y"
                      android:textColor="#ffffff"/>
            <TextView android:id="@+id/Y"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignLeft="@+id/X"
                      android:layout_alignTop="@+id/textView15"
                      android:text="000.0"
                      android:textSize="18dp"/>
            <TextView android:id="@+id/textView18"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignLeft="@+id/textView15"
                      android:layout_below="@+id/textView15"
                      android:layout_marginTop="20dp"
                      android:text="Z"
                      android:textColor="#ffffff"/>
            <TextView android:id="@+id/Z"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignLeft="@+id/Y"
                      android:layout_alignTop="@+id/textView18"
                      android:text="000.0"
                      android:textSize="18dp"/>
            <TextView android:id="@+id/textView20"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignBottom="@+id/X"
                      android:layout_marginLeft="3dp"
                      android:layout_toRightOf="@+id/X"
                      android:text="m"
                      android:textColor="#ffffff"
                      android:textSize="13dp"
                      android:textStyle="italic"/>
            <TextView android:id="@+id/textView38"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignBottom="@+id/Y"
                      android:layout_marginLeft="3dp"
                      android:layout_toRightOf="@+id/Y"
                      android:text="m"
                      android:textColor="#ffffff"
                      android:textSize="13dp"
                      android:textStyle="italic"/>
            <TextView android:id="@+id/textView39"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignBottom="@+id/Z"
                      android:layout_marginLeft="3dp"
                      android:layout_toRightOf="@+id/Z"
                      android:text="m"
                      android:textColor="#ffffff"
                      android:textSize="13dp"
                      android:textStyle="italic"/>
        </RelativeLayout>
        </LinearLayout>

    <LinearLayout android:id="@+id/graph"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="5"
                  android:orientation="vertical"/>
</LinearLayout>