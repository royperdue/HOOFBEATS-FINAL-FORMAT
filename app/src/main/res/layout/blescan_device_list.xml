<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <View
        style="@style/HorizontalLine"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">
        <Button
            android:id="@+id/capture_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_capture"
            android:textColor="@color/orange"
            android:visibility="visible"/>
        <Button
            android:id="@+id/blescan_control"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ble_scan"
            android:textColor="@android:color/holo_green_dark"
            android:visibility="visible"/>
        <Button
            android:id="@+id/ble_connect_control"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_connect"
            android:textColor="@android:color/holo_blue_dark"
            android:visibility="visible"/>
    </LinearLayout>
    <View
        style="@style/HorizontalLine"
        android:background="@android:color/darker_gray"/>
    <ListView
        android:id="@+id/blescan_devices"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_400dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"/>
</LinearLayout>