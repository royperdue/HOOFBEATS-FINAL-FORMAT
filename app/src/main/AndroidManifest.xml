<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hoofbeats.app" >

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.location.gps" />

    <uses-sdk xmlns:tools="http://schemas.android.com/tools"
              tools:overrideLibrary="android.support.v14.preference" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/metawear_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <service android:name="com.hoofbeats.app.DfuService" />
        <service android:name="com.mbientlab.metawear.android.BtleService"/>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.hoofbeats.app.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
        <activity
            android:name="com.hoofbeats.app.NavigationActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
